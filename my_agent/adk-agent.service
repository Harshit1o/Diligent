[Unit]
Description=ADK RAG Agent Web Server
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/adk-agent
Environment="PATH=/home/ubuntu/adk-agent/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/ubuntu/adk-agent/venv/bin/adk web --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
